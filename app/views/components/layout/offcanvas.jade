//
    ui-layout(open, fx)
        | // open is optional, defaults to false
        | // fx is optional, defaults to slide
        | // properties can be accessed through dom
        | //    document.querySelectorAll('ui-layout')[0].open = true
        ui-layout-drawer
            | // drawer-content
        ui-layout-page
            | // page-content

element(name="ui-layout", \attributes="open fx")
    template
        style
            @host {
                * {}
            }

            .ui-layout {
                background: #fcc;
                min-height: 100%;
            }
            .ui-layout-drawer {
                background: #ccf;
                border: 1px solid #000;
                left: 0;
                bottom: 0;
                position:fixed;
                top: 0;
                width: 300px;
                overflow: auto;
            }
            .ui-layout-page {
                background: #fcf;
                z-index: 2;
                overflow: auto;
            }

            [fx="slide']{
                overflow: hidden;
            }

            [fx="pan"],
            [fx="slide"] .ui-layout-page {
                   -ms-transform: translate3d(0,0,0);
                    -moz-transform: translate3d(0,0,0);
                    -webkit-transform: translate3d(0,0,0);
                transform: translate3d(0,0,0);
                    -ms-transition: all 1s;
                    -moz-transition: all 1s;
                    -webkit-transition: all 1s;
                transition: all 1s;
            }

            [open="true"][fx="pan"],
            [open="true"][fx="slide"] .ui-layout-page {
                    -ms-transform: translate3d(300px,0,0);
                    -moz-transform: translate3d(300px,0,0);
                    -webkit-transform: translate3d(300px,0,0);
                transform: translate3d(300px,0,0);
            }

            [fx="pan"] .ui-layout-drawer {
                right: 100%;
                left: inherit;
            }

        div.ui-layout(open="{{open}}", fx="{{fx}}")
            div.ui-layout-drawer
                content(select="ui-layout-drawer")
            div.ui-layout-page
                content(select="ui-layout-page")

    script
        Polymer.register(this, {
            open: false,
            fx: 'slide',
            ready: function(){
            }
        });