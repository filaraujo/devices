mixin details(details, type)
    if(details)
        each value, id in details
            if value
                if typeof value === "object"
                    div.detail-group
                        span #{type}.#{id}
                        mixin details(details[id], type+'.'+id)
                else
                    if(typeof value != "function")
                        mixin detail(id, value, type)

mixin detail(id, value, type)
    div.detail
        span #{type}.#{id}
        | #{value}