extends ../layout

block append head-js
    script(src="/javascripts/vendor/jquery-2.0.0.min.js")
    if !device.exists
        script(src="javascripts/vendor/modernizr.custom.js")
        script(src="javascripts/device.js")

block content
    h1= title

    if devices.length
        h2 Stored Devices
        each device in devices
            mixin device(device)

    article
        include profile


mixin device(device)
    div
        a(href="/device/#{device._id}") #{device.agent.id}
