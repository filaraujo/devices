include _details

h3 Device Profile
section.profile
    div.detail
        span User Agent
        | #{device.id || device.string}
    if device._id
        div.detail
            span Mongo id
            | #{device._id}

    div.detail-group
        span Browser
        mixin details(device.agent, 'agent')


    div.detail-group
        span Operating System
        mixin details(device.system, 'system')

    div.detail-group
        span Device
        mixin details(device.device, 'device')

    if device.created
        div.detail
            span Date Collected
            | #{device.created}


if device.exists
    h3 css features
    section.features-css
        mixin details(device.css,'css')


    h3 html features
    h4 inputs
    section.html
        mixin details(device.html.input,'html.input')
