@import normalize
@import icons

@font-face {
    font-family: 'Mojave';
    src: url('/fonts/mojave-regular-webfont.eot');
    src: url('/fonts/mojave-regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('/fonts/mojave-regular-webfont.woff') format('woff'),
         url('/fonts/mojave-regular-webfont.ttf') format('truetype'),
         url('/fonts/mojave-regular-webfont.svg#franchiseregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

html
    background #ecf0f1
    color #fff
    font-size  62.5%

body > header
    height 8em
    background #2c3e50

h2
    color #fff
    font-family 'Mojave'
    font-size 3rem
    line-height 8rem
    margin 0
    padding 0 4vmin

.browsers
    padding 4vmin
    overflow auto

.browser
    background #16a085
    float left
    font-size: 1.4rem
    margin 0 4vmin 4vmin 0
    padding-top 8rem
    position relative
    width 20rem

    &.browser-chrome {
        background #f1c40f
    }

    &.browser-firefox {
        background #e67e22
    }

    &.browser-safari {
        background #3498db
    }

    &.browser-opera {
        background #c0392b
    }

    &.browser-ie {
        background #3498db
    }


    a
        background #2c3e50
        border-top 1px solid #95a5a6
        color #fff
        display block
        font-family 'Mojave'
        line-height 4rem
        padding 0 2vmin 0 2vmin
        text-decoration none
        text-align right

        &:first-of-type
            border-top: 0

        &:hover
            background #34495e

    a.group
        line-height 2rem
        padding 1rem 2vmin

        span
            color #ecf0f1
            display block
            font-size 1.3rem
            float left
            line-height 2rem

    .browser-heading
        bottom 0
        left 0
        height 8rem
        position absolute
        overflow hidden
        right 0
        top 0

    span.id
        color #fff
        top 3rem
        font-family 'Mojave'
        font-size 2rem
        letter-spacing 1px
        position absolute
        left 2vmin
        text-transform uppercase

    span[class^="icon"]
        top -38%
        font-size 10em
        position absolute
        right -13%
        opacity .8
        text-shadow 0 1px 2px #2c3e50