@import normalize

html,
body
    font-size  62.5%
    height  100%

body
    color  #333
    background  #fff
    font-family  "Helvetica Neue", Helvetica, Arial, sans-serif
    font-size  1.3rem
    margin  0

h1,
h2,
h3,
h4,
h5,
h6
    margin: 0



section
    border  1px solid #ccc
    border-width  0 1px 1px

.detail
    border-top  1px solid #ccc
    line-height  3rem
    padding  0 1rem
    text-align  right

    span
        float  left

.detail-group
    line-height  3rem

    span
        padding  0 1rem

    .detail
        background  #ededed
        clear  both
        border-bottom  0
        border-top  1px solid #ddd
        line-height  2rem
        margin-left  2rem

    .detail-group
        background  #f8f8f8
        clear  both
        margin-left  2rem