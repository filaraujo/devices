.ui-slide
    background #fff
    bottom 20px
    border-radius 4px
    height 60vmin
    left 20px
    margin auto
    min-width 320px
    min-height 240px
    opacity 0
    padding 1vmin
    position absolute
    right 20px
    -ms-transition opacity 0.6s ease-in-out
    -moz-transition opacity 0.6s ease-in-out
    -webkit-transition opacity 0.6s ease-in-out
    transition opacity 0.6s ease-in-out
    top 20px


    &[state="ui-slide-current"]
        opacity 1

@media screen and (orientation:portrait)
    .ui-slide
        height 60vmin

@media screen and (orientation:landscape)
    .ui-slide
        height 60vw
        max-height 86%
        max-width 140vh
        width 90vw