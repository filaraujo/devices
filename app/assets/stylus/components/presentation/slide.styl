gray = #e6e6e6

.ui-slide
    bottom 20px
    border-radius 4px
    height 60vmin
    left 20px
    margin auto
    min-width 320px
    min-height 240px
    opacity 0
    overflow scroll
    padding 1vmin
    position absolute
    right 20px
    -ms-transition opacity .6s 0
    -moz-transition opacity .6s 0
    -webkit-transition opacity .6s 0
    transition opacity .6s 0
    -webkit-transform: translate3d(0,0,0)
    transform: translate3d(0,0,0)
    top 20px

    &:not([background="false"])
        background -webkit-linear-gradient(white, white 85%, gray)
        background linear-gradient(white, white 85%, gray)

    &[style*="translate"]
        background -webkit-linear-gradient(white, white 85%, gray)
        background linear-gradient(white, white 85%, gray)
        display: block !important;
        opacity: .5;
        -ms-transition all 0.6s ease-in-out, opacity .6s .4s
        -moz-transition all 0.6s ease-in-out, opacity .6s .4s
        -webkit-transition all 0.6s ease-in-out, opacity .6s .4s
        transition all 0.6s ease-in-out, opacity .6s .4s

    &[center="true"]
        text-align center

    &[vcenter="true"]
        -webkit-align-items center
        align-items center
        -webkit-justify-content center
        justify-content center
        display -moz-flex
        display -ms-flex
        display -webkit-flex
        display flex

    &[state="ui-slide-current"]
        opacity 1

@media screen and (orientation:portrait)
    .ui-slide
        height 60vmin

@media screen and (orientation:landscape)
    .ui-slide
        height 60vw
        max-height 86%
        max-width 140vh
        width 90vw