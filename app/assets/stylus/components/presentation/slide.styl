gray = #e6e6e6

@css {
    @host {
        * {
            bottom: 0;
            pointer-events: none;
            position: absolute;
            top: 0;
            width: 100%;
        }
    }
}

// .ui-slide
.ui-slide
    // border-radius 4px
    -moz-box-sizing: border-box
    box-sizing: border-box
    box-shadow 0 0 6px rgba(0,0,0,.5)
    display -webkit-flex
    display flex
    -webkit-flex-direction column
    flex-direction column
    -webkit-flex-wrap nowrap
    flex-wrap nowrap
    height 100%
    padding 6vmin
    overflow hidden
    -ms-transition opacity .6s 0
    -moz-transition opacity .6s 0
    -webkit-transition opacity .6s 0
    transition opacity .6s 0
    width 100%

    &[overview="true"]
        -moz-filter grayscale(0)
        -ms-filter grayscale(0)
        -webkit-filter grayscale(0)
        filter grayscale(0) // this fixes a bug cause by performance hack
        position absolute
        opacity 1

        &:not([state="ui-slide-current"])
            opacity .4
            -moz-filter grayscale(1)
            -ms-filter grayscale(1)
            -webkit-filter grayscale(1)
            filter grayscale(1) // this adds performance

    &[backdrop="false"]
        box-shadow none

    &[backdrop="true"]:after,
    &[presentor="true"]:after
        bottom 1.5vmin
        color #aaa
        content attr(index)
        font-size 1.33vmin
        position absolute
        right 1.8vmin

    &:not([state="ui-slide-current"])
        opacity 0

    &[state="ui-slide-current"]
        opacity 1
        pointer-events auto

    &[background="true"],
    &[overview="true"],
    &[presentor="true"]
        // background -webkit-linear-gradient(white, white 85%, gray)
        // background linear-gradient(white, white 85%, gray)
        background #fff

    &[center="true"]
        -webkit-align-items center
        align-items center
        text-align center

    &[vcenter="true"]
        -webkit-justify-content center
        justify-content center

    &[presentor="true"]
        // border-radius 0
        overflow visible
        -ms-transition none
        -moz-transition none
        -webkit-transition none
        transition none

        &[state="ui-slide-current"]
            right auto
            -webkit-transform scale(.7)
            transform scale(.7)
            -webkit-transform-origin 0% 0%
            transform-origin 0% 0%

        &[state="ui-slide-next"]
            left auto !important
            opacity 1
            right 0
            -webkit-transform scale(.29)
            transform scale(.29)
            -webkit-transform-origin 100% 0%
            transform-origin 100% 0%
            z-index 2


// .ui-slide-notes
.ui-slide-notes
    z-index 3

    .ui-slide[presentor="false"] &
        -webkit-align-items center
        align-items center
        bottom 0
        // border-radius 4px
        -moz-box-sizing: border-box
        box-sizing: border-box
        box-shadow 0 0 6px rgba(0,0,0,.5)
        display -webkit-flex
        display flex
        -webkit-flex-direction column
        -webkit-flex-wrap nowrap
        flex-wrap nowrap
        flex-direction column
        left 0
        -webkit-justify-content center
        justify-content center
        padding 4vmin
        position absolute
        right 0
        -webkit-transform: translate3d(0,0,0)
        transform: translate3d(0,0,0)
        -webkit-transition all .6s
        transition all .6s
        top 0

        &:after
            background #000
            bottom -10px
            content ''
            left -10px
            opacity .5
            position absolute
            right -10px
            top -10px

        ul
            background #fff
            // border-radius 4px
            box-shadow 0 0 6px rgba(0,0,0,.5)
            margin 2vmin
            padding 2vmin 2vmin 2vmin 4vmin
            width 80%
            z-index 1

        li
            margin 2vmin 0


    .ui-slide[presentor="false"][notes="false"] &
        visibility hidden
        -webkit-transform: translate3d(0,100%,0)
        transform: translate3d(0,100%,0)

    .ui-slide[presentor="true"] &
        background #f27935
        box-shadow 0 2px 2px rgba(0,0,0,.3)
        color #fff
        position absolute
        top 100%
        left 0
        right 0
        display block
        max-height: 30%
        margin 0
        padding 2vmin


/* @polyfill .ui-slide-note */
content::-webkit-distributed(.ui-slide-note)
    display: none


/* @polyfill hgroup */
content::-webkit-distributed(hgroup)
    -webkit-flex none
    flex none

/* @polyfill article */
content::-webkit-distributed(article)
    -webkit-flex 1 1 auto
    flex 1 1 auto
    height 100%
    // font-size 1.75vmin
    overflow auto

/* @polyfill [class^="ui-slide-item"] */
content::-webkit-distributed([class*="ui-slide-item"])
    -ms-transition opacity 0.6s ease-in-out
    -moz-transition opacity 0.6s ease-in-out
    -webkit-transition opacity 0.6s ease-in-out
    transition opacity 0.6s ease-in-out

/* @polyfill .ui-slide-item-pending */
content::-webkit-distributed(.ui-slide-item-pending)
    opacity 0

/* @polyfill .ui-slide[presentor="true"] .ui-slide-item-pending */
[presentor="true"] content::-webkit-distributed( .ui-slide-item-pending)
    background yellow
    opacity .3

/* @polyfill .ui-slide[presentor="true"] .ui-slide-item-next */
[presentor="true"] content::-webkit-distributed( .ui-slide-item-next)
    background yellow
    opacity .6

/* @polyfill .ui-slide-item-done */
content::-webkit-distributed(.ui-slide-item-done)
    opacity 1

/* @polyfill .ui-slide-item-done.ui-slide-item-fade */
content::-webkit-distributed(.ui-slide-item-done.ui-slide-item-fade)
    opacity: .3

.ui-slide[overview="true"] content::-webkit-distributed(.ui-slide-item-pending)
    opacity 1
