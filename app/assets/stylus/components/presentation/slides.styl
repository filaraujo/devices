@css {
    @host {
        * {
            bottom: 0;
            left: 0;
            position: absolute;
            right: 0;
            top: 0;
        }
    }
}

.ui-slides
    background #202226
    min-height 100%
    min-width: 100%
    overflow hidden
    position relative
    -webkit-transition background 0.4s ease-in-out
    transition background 0.4s ease-in-out
    -webkit-perspective 1000
    perspective 1000

    &[backdrop="false"]
        background #fff
        // box-shadow inset 0 0 5rem rgba(0,0,0,.3)

    &[overview="true"]
        background #222
        -ms-transition none
        -moz-transition none
        -webkit-transition none
        transition none

    &[presentor="true"]
        background-image radial-gradient(50% 50%, #b1dfff 0%, #00afd1 600px)


.ui-slides-viewport
    bottom 20px
    left 20px
    margin auto
    min-width 300px
    min-height 240px
    overflow hidden
    position absolute
    right 20px
    -ms-transition -ms-transform 1s
    -moz-transition -moz-transform 1s
    -webkit-transition -webkit-transform 1s
    transition transform 1s
    top 20px

    .ui-slides[overview="true"] &
        overflow visible

// LAYOUT
@media screen and (min-width:0) and (max-width:380px) and (orientation:portrait)
    .ui-slides-viewport
        left -4px
        right -4px

// landscape
@media screen and (orientation:landscape) and (min-aspect-ratio:3/2)
    .ui-slides-viewport
        max-width 140vh
        width 90vw
        max-height 86vh
        min-height 86vh

// extreme landscape
@media screen and (min-aspect-ratio:4/1) and (orientation:landscape)
    .ui-slides-viewport
        max-height 60vw

@media screen and (orientation:landscape)
    .ui-slides-viewport
        width 90vw

// portrait, square, extreme portrait
@media screen and (orientation:portrait),
screen and (min-aspect-ratio:1/1) and (max-aspect-ratio:3/2),
screen and (max-aspect-ratio:2/3) and (orientation:portrait)
    .ui-slides-viewport
        max-height 60vw

@media screen and (max-height:240px)
    .ui-slides-viewport
        height 100%

@media screen and (max-width:300px)
    .ui-slides-viewport
        min-height 200px
        max-height 200px


// TYPOGRAPHY
@media all
    content::-webkit-distributed(ui-slide)
        font-size 2vh

@media all and (min-aspect-ratio:2/1)
    content::-webkit-distributed(ui-slide)
        font-size 1.875vh

@media all and (max-aspect-ratio:7/4)
    content::-webkit-distributed(ui-slide)
        font-size 1.125vw

@media all and (max-aspect-ratio:8/5)
    content::-webkit-distributed(ui-slide)
        font-size 1.2125vw