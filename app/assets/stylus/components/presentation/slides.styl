.ui-slides
    background #222
    min-height 100%
    min-width: 100%
    overflow hidden
    position relative
    -moz-transition background 0.4s ease-in-out
    -ms-transition background 0.4s ease-in-out
    -webkit-transition background 0.4s ease-in-out
    transition background 0.4s ease-in-out
    -webkit-perspective 1000
    perspective 1000

    &:not([backdrop="true"])
        background #fff
        box-shadow inset 0 0 5rem rgba(0,0,0,.3)

    &[overview="true"]
        background #222
        -ms-transition none
        -moz-transition none
        -webkit-transition none
        transition none

    &[presentor="true"]
        background-image radial-gradient(50% 50%, #b1dfff 0%, rgb(67, 135, 253) 600px)

.ui-slides-viewport
    bottom 20px
    height 60vmin
    left 20px
    margin auto
    min-width 320px
    min-height 240px
    overflow hidden
    position absolute
    right 20px
    -webkit-transform: translate3d(0,0,0)
    transform: translate3d(0,0,0)
    -ms-transition -ms-transform .6s 0
    -moz-transition -moz-transform .6s 0
    -webkit-transition -webkit-transform .6s 0
    transition transform .6s 0
    top 20px

    .ui-slides[overview="true"] &
        overflow: visible

@media screen and (orientation:portrait)
    .ui-slides-viewport
        height 60vmin

@media screen and (orientation:landscape)
    .ui-slides-viewport
        height 60vw
        max-height 86%
        max-width 140vh
        width 90vw