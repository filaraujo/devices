.ui-slides
    background #222
    min-height 100%
    min-width: 100%
    overflow hidden
    position relative
    -ms-transition background 0.4s ease-in-out
    -moz-transition background 0.4s ease-in-out
    -webkit-transition background 0.4s ease-in-out
    transition background 0.4s ease-in-out
    -moz-perspective 1000
    -ms-perspective 1000
    -webkit-perspective 1000
    perspective 1000

    &[backdrop="false"]
        background #fff
        box-shadow inset 0 0 5rem rgba(0,0,0,.3)

    &[overview="true"]
        background: #222
        -ms-transition none
        -moz-transition none
        -webkit-transition none
        transition none

.ui-slides-viewport
    position: absolute
    top: 0
    left: 0
    bottom: 0
    right: 0
    -ms-transition all 0.6s ease-in-out
    -moz-transition all 0.6s ease-in-out
    -webkit-transition all 0.6s ease-in-out
    transition all 0.6s ease-in-out

    .ui-slides[overview="true"] &
        -moz-transform: translateZ(-2500px)
        -ms-transform: translateZ(-2500px)
        -webkit-transform: translateZ(-2500px)
        transform: translateZ(-2500px)