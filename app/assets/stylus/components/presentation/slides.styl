.ui-slides
    background #222
    min-height 100%
    min-width: 100%
    overflow hidden
    position relative
    -moz-transition background 0.4s ease-in-out
    -ms-transition background 0.4s ease-in-out
    -webkit-transition background 0.4s ease-in-out
    transition background 0.4s ease-in-out
    -webkit-perspective 1000
    perspective 1000

    &:not([backdrop="true"])
        background #fff
        box-shadow inset 0 0 5rem rgba(0,0,0,.3)

    &[overview="true"]
        background #222
        -ms-transition none
        -moz-transition none
        -webkit-transition none
        transition none

    &[presentor="true"]
        background-image radial-gradient(50% 50%, #b1dfff 0%, rgb(67, 135, 253) 600px)

.ui-slides-viewport
    position: absolute
    top: 0
    left: 0
    bottom: 0
    right: 0
    -moz-transition all 0.6s ease-in-out
    -ms-transition all 0.6s ease-in-out
    -webkit-transition all 3.6s ease-in-out
    transition all 0.6s ease-in-out

    .ui-slides[overview="true"] &
        -moz-transform: translateZ(-2500px)
        -ms-transform: translateZ(-2500px)
        -webkit-transform: translateZ(-2500px)
        transform: translateZ(-2500px)