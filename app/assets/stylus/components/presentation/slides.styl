.ui-slides
    background #222
    min-height 100%
    min-width: 100%
    overflow hidden
    position relative
    -webkit-transition background 0.4s ease-in-out
    transition background 0.4s ease-in-out
    -webkit-perspective 1000
    perspective 1000

    &:not([backdrop="true"])
        background #fff
        box-shadow inset 0 0 5rem rgba(0,0,0,.3)

    &[overview="true"]
        background #222