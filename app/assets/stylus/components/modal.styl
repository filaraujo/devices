// variables
modalBorderRadius = 4px
modalOuterMargin = 20px
modalInnerPadding = 20px
overlayOpacitySpeed = .4s
contentOpacitySpeed = 1s

// mixins
fade(oSpd = 1s, vDelay = 1s)
    -ms-transition opacity oSpd, visibility 0s vDelay
    -moz-transition opacity oSpd, visibility 0s vDelay
    -webkit-transition opacity oSpd, visibility 0s vDelay
    transition opacity oSpd, visibility 0s vDelay

// styles
.ui-modal
    bottom: 0;
    -webkit-align-items: center;
    align-items: center;
    -webkit-justify-content: center;
    justify-content: center;
    display: -moz-flex;
    display: -ms-flex;
    display: -webkit-flex;
    display: flex;
    left: 0;
    padding: 20px;
    position: fixed;
    right: 0;
    top: 0;
    z-index: 1000

    &:before
        background #000
        bottom 0
        content ''
        left 0
        opacity 0
        position absolute
        right 0
        top 0
        visibility hidden
        z-index 0
        fade(1s, 2s)

        [open="true"]&
            visibility visible
            opacity .85
            fade(1s, 0)

.ui-modal-content
    background: #fff
    border-radius modalBorderRadius
    box-shadow: 0 0 10px rgba(0,0,0,.6)
    box-sizing border-box
    display -webkit-flex;
    display flex;
    -webkit-flex-direction column
    -webkit-flex-wrap nowrap
    flex-wrap nowrap
    flex-direction column
    max-height 100%
    min-height 300px
    min-width 300px
    opacity 0
    z-index 2
    -webkit-transition all .2s ease-in
    transition all .2s ease-in
    -webkit-transform scale(0.6)
    transform scale(0.6)

    [open="true"].ui-modal &
        opacity 1
        -webkit-transform scale(1)
        transform scale(1)

.ui-modal-header
    -webkit-flex none
    flex none
    padding 10px 16px

.ui-modal-body
    border-top 1px solid #aaa
    -webkit-flex 1 1 auto
    flex 1 1 auto
    overflow scroll
    padding 10px 16px

.ui-modal-footer
    background #ddd
    -webkit-flex none
    flex none
    padding 12px 16px 14px
    border-radius: 0 0 modalBorderRadius modalBorderRadius





